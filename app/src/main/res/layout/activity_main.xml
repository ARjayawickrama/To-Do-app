<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="16dp">

    <!-- Background ImageView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/pngwing_com__33_"
        android:scaleType="centerCrop"
        android:alpha="0.7" />

    <!-- Buttons stacked on top of the ImageView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title TextView for To-Do App -->
        <TextView
            android:id="@+id/todoTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="To-Do App"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Red Button -->
        <Button
            android:id="@+id/taskButton"
            android:layout_width="1000dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/material_dynamic_neutral_variant99"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Tasks"
            android:textColor="#000000" />

        <!-- Yellow Button -->
        <Button
            android:id="@+id/stopwatchButton"
            android:layout_width="1000dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Stopwatch"
            android:textColor="@android:color/white" />

        <!-- Green Button -->
        <Button
            android:id="@+id/reminderButton"
            android:layout_width="1000dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/backgroundColor"
            android:elevation="4dp"
            android:padding="10dp"
            android:text="Reminder"
            android:textColor="#000000" />

        <!-- TextView for displaying alarm message -->
        <TextView
            android:id="@+id/alarmMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center" />

        <Button
            android:id="@+id/deleteAlarmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="?android:attr/colorFocusedHighlight"
            android:text="Delete Alarm"
            android:textColor="@android:color/white" />

    </LinearLayout>
</FrameLayout>
